<%- layout("/layout/boilerPlate") %>
<body>
    
    <br><br>
    <div class="row">
        <div class="col-8 offset-2">

    
        <h3>Create A New Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div>
                <label for="title" class="form-label ">Title</label>
                <input type="text" name="listing[title]" class="form-control"  placeholder="Add a catchy title" required >
                <br>

            </div>
            <div>
                <label for="description" class="form-label">Description</label>
                <textarea type="text" name="listing[description]" class="form-control" placeholder="Enter description" required></textarea>
                <br>
            </div>
            
           

            <div>
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" name="listing[image]" class="form-control" required >
                <br>
            </div>
            <div class="row">
                
                    <div class="col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" class="form-control" placeholder="1200" required>
                    <br>
                    </div>
                    
                    <div class="col-md-8">
                        <label for="location " class="form-label">Location</label>
                        <input type="text" name="listing[location]" class="form-control" placeholder="Bhopal" required>
                        <br>
                    </div>
                
            </div>
           
            
            <div>
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" class="form-control" placeholder="India" required>
                <br>
            </div>
        

            <button class="btn btn-dark add-btn">Add</button>
            <br><br>
        </form>

      </div>
    </div>

    <script src="/public/js/script.js"></script>
</body>
